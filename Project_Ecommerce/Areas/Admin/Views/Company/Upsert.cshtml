@model Project_Ecommerce.Models.Company
@{
    var title = Model.Id != 0 ? "Edit Company Details" : "New Company ";
}

<form method="post">
    <div class="row">
        <div class=" col-12 ">
            <h2 class="text-primary">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 row container border m-2 p-2">
            <div class="col">

                <div class="form-group row m-2 p-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row m-2 p-2">
                    <div class="col-4">
                        <label asp-for="StreetAddress"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StreetAddress" class="form-control" />
                        <span asp-validation-for="StreetAddress" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row m-2 p-2">
                    <div class="col-4">
                        <label asp-for="City"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row m-2 p-2">
                    <div class="col-4">
                        <label asp-for="State"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                </div>

            </div>

            @*Partition*@

            <div class="col">
                <div class="form-group row m-2 p-2">
                    <div class="col-4">
                        <label asp-for="PhoneNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row m-2 p-2">
                    <div class="col-4">
                        <label asp-for="PostalCode"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PostalCode" class="form-control" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row m-2 p-2">
                    <div class="col-4">
                        <label asp-for="IsAuthorised"></label>
                    </div>
                    <div class="col-8">
                        <input type="checkbox" asp-for="IsAuthorised" />
                        <span asp-validation-for="IsAuthorised" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row m-1 p-1">
                    <div class="col-8 offset-4">
                        @if (Model.Id != 0)
                        {
                            <partial name="_EditAndBackTOListButton"></partial>
                        }
                        else
                        {
                            <partial name="_CreateAndBackTOListButton"></partial>

                        }

                    </div>
                </div>

            </div>
        </div>


    </div>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}